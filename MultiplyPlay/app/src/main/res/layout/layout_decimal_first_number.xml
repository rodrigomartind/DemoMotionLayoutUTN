<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/dec1"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_bias="0"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dec2"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dec2"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:visibility="gone"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dec3"
        app:layout_constraintStart_toEndOf="@id/dec1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dec3"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:visibility="gone"
        android:layout_marginBottom="56dp"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dec4"
        app:layout_constraintStart_toEndOf="@id/dec2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dec4"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:visibility="gone"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dec5"
        app:layout_constraintStart_toEndOf="@id/dec3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dec5"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:visibility="gone"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dec6"
        app:layout_constraintStart_toEndOf="@id/dec4"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dec6"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:visibility="gone"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dec7"
        app:layout_constraintStart_toEndOf="@id/dec5"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dec7"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:visibility="gone"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dec8"
        app:layout_constraintStart_toEndOf="@id/dec6"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dec8"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:visibility="gone"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dec9"
        app:layout_constraintStart_toEndOf="@id/dec7"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dec9"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline4"
        app:layout_constraintStart_toEndOf="@id/dec8"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />
</androidx.constraintlayout.widget.ConstraintLayout>